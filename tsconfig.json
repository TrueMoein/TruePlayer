{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "target": "ES5",
    "outDir": "dist",
    "module": "ES2015",
    "moduleResolution": "Node",
    "sourceMap": true,
    "lib": ["ES2015", "DOM"],
    "rootDirs": ["src", "playground"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "playground"]
}
